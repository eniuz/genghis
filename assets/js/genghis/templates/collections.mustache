<header><h2>{{ title }}</h2></header>
<div class="content">
    <table>
        <thead>
            <tr>
                <th>name</th>
                <th>documents</th>
                <th>indexes</th>
                <th>size</th>
                <th data-sorter="false"></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


<div class="add-form-toggle form-horizontal">
    <div class="btn-group">
        <button class="btn">Add collection</button>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a class="show" href="#">Add collection</a></li>
            <li><a class="show-gridfs" href="#">Add GridFS collection</a></li>
        </ul>
    </div>
</div>

<div class="add-form form-horizontal">
    <input class="name span4" type="text" size="30">
    <button class="add btn btn-primary">Add collection</button>
    <button class="cancel btn">Cancel</button>
</div>

<div class="add-form-gridfs form-horizontal">
    <span class="input-wrapper input-append">
        <input class="name span4" type="text" size="30"><span class="add-on">.files</span>
    </span>
    <button class="add btn btn-primary">Add GridFS collection</button>
    <button class="cancel btn">Cancel</button>
</div>
